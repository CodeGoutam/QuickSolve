<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E5B4"
    tools:context=".length1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#220606"
                android:ems="10"
                android:hint=" square cm"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/sqcmbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="convert"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/foot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#0E0D0D"
                android:ems="10"
                android:hint="square kilometer"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/meterbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="convert"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/millimeter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#0E0D0D"
                android:ems="10"
                android:hint="square millimeter"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/micrometerbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="convert"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#0E0D0D"
                android:ems="10"
                android:hint="square meter"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/cmbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="convert"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kmbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#0E0D0D"
                android:ems="10"
                android:hint="hectare"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/hbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="convert"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>