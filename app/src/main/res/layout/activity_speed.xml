<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E5B4"
    tools:context=".length1">

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="390dp"
        android:layout_marginEnd="220dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542">

        <EditText
            android:id="@+id/mph"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="mile/hour"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/kph"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="kilometer/hour"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fps"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="foot/second"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mps"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="meter/second"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="382dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584">

        <Button
            android:id="@+id/mphbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kphbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fpsbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mpsbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>