<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E5B4"
    tools:context=".length1">

    <LinearLayout
        android:layout_width="198dp"
        android:layout_height="571dp"
        android:layout_marginEnd="196dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318">

        <EditText
            android:id="@+id/mph"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic centimeter"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/kph"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic meter"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/fps"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic decimeter"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pg"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic kilometer"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mps"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic inch"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/mg"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic yard"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/p"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic mile"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/g"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:backgroundTint="#220606"
            android:ems="10"
            android:hint="cubic foot"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="558dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416">

        <Button
            android:id="@+id/mphbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kphbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fpsbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mpsbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/kgbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/mgbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/gbtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="7dp"
            android:text="convert"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>