<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E5B4"
    tools:context=".length1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/lengthimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/op" />

                <ImageView
                    android:id="@+id/areaimg"

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    app:srcCompat="@drawable/sho" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/length"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="length" />

                <Button
                    android:id="@+id/area"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="area" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/tempimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="145dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="70dp"
                    app:srcCompat="@drawable/rr" />

                <ImageView
                    android:id="@+id/massimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="151dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/mass" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/temperature"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/temperature" />

                <Button
                    android:id="@+id/mass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="mass" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/volumeimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="151dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/vol" />

                <ImageView
                    android:id="@+id/speedimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/speedd" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/volume"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="volume" />

                <Button
                    android:id="@+id/speed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="speed" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</LinearLayout>